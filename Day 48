Day 48 Question 1
#include <stdio.h>
#include <string.h>

int main() {
    char str1[100], str2[100];
    fgets(str1, sizeof(str1), stdin);
    fgets(str2, sizeof(str2), stdin);

    int len1 = strlen(str1) - 1; // ignoring newline
    int len2 = strlen(str2) - 1;

    if (len1 != len2) {
        printf("Not a rotation\n");
        return 0;
    }

    str1[len1] = '\0';
    str2[len2] = '\0';

    char temp[200];
    strcpy(temp, str1);
    strcat(temp, str1);

    if (strstr(temp, str2) != NULL)
        printf("String is a rotation\n");
    else
        printf("Not a rotation\n");

    return 0;
}

Day 48 Question 2
#include <stdio.h>
#include <string.h>

int main() {
    char str[200];
    fgets(str, sizeof(str), stdin);

    int start = 0, end;
    for (int i = 0; ; i++) {
        if (str[i] == ' ' || str[i] == '\0' || str[i] == '\n') {
            end = i - 1;
            for (int j = end; j >= start; j--)
                printf("%c", str[j]);
            if (str[i] == ' ')
                printf(" ");
            start = i + 1;
        }
        if (str[i] == '\0' || str[i] == '\n')
            break;
    }

    printf("\n");
    return 0;
}
