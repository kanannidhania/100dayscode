Day 43 Question 1
#include <stdio.h>

int main() {
    char str[100];
    int length = 0;

    fgets(str, sizeof(str), stdin);

    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] != '\n')
            length++;
    }

    for (int i = length - 1; i >= 0; i--)
        printf("%c", str[i]);

    printf("\n");
    return 0;
}

Day 43 Question 2
#include <stdio.h>

int main() {
    char str[100];
    int length = 0, flag = 1;

    fgets(str, sizeof(str), stdin);

    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] != '\n')
            length++;
    }

    for (int i = 0; i < length / 2; i++) {
        if (str[i] != str[length - 1 - i]) {
            flag = 0;
            break;
        }
    }

    if (flag)
        printf("Palindrome\n");
    else
        printf("Not a palindrome\n");

    return 0;
}
