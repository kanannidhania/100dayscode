Day 49 Question 1
#include <stdio.h>

int main() {
    char str[100];
    fgets(str, sizeof(str), stdin);

    if (str[0] != ' ' && str[0] != '\n')
        printf("%c", str[0]);

    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] == ' ' && str[i+1] != ' ' && str[i+1] != '\0' && str[i+1] != '\n')
            printf("%c", str[i+1]);
    }

    printf("\n");
    return 0;
}

Day 49 Question 2
#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    fgets(str, sizeof(str), stdin);

    int len = strlen(str);
    if (str[len-1] == '\n') str[len-1] = '\0';

    int i = 0;
    // Print initials of all names except the last word
    while (str[i] != '\0') {
        if (i == 0 && str[i] != ' ') {
            printf("%c.", str[i]);
        }
        if (str[i] == ' ' && str[i+1] != ' ' && str[i+1] != '\0') {
            int j = i+1;
            int isLastWord = 1;
            for (int k = j; str[k] != '\0'; k++) {
                if (str[k] == ' ') { isLastWord = 0; break; }
            }
            if (isLastWord) break; // last word, stop initials
            printf("%c.", str[i+1]);
        }
        i++;
    }

    // Print the last word (surname)
    int lastSpace = -1;
    for (int k = 0; str[k] != '\0'; k++)
        if (str[k] == ' ') lastSpace = k;

    if (lastSpace != -1) {
        for (int k = lastSpace+1; str[k] != '\0'; k++)
            printf("%c", str[k]);
    }

    printf("\n");
    return 0;
}

