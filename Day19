Day19Question1

  #include <stdio.h>


int gcd(int a, int b) {
    int temp;
    if (a < 0) a = -a;
    if (b < 0) b = -b;

    while (b != 0) {
        temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

int main() {
    int num1, num2, lcm;

    printf("Enter two integers: ");
    scanf("%d %d", &num1, &num2);

    int hcf = gcd(num1, num2);

    
    lcm = (num1 / hcf) * num2;  

    if (lcm < 0) lcm = -lcm; 

    printf("LCM of %d and %d is %d\n", num1, num2, lcm);

    return 0;
}


Day19Question2

  #include <stdio.h>

int main() {
    int num, sum = 0, remainder;

    printf("Enter an integer: ");
    scanf("%d", &num);

    
    if (num < 0) {
        num = -num;
    }

    while (num != 0) {
        remainder = num % 10;
        sum += remainder;
        num /= 10;
    }

    printf("Sum of digits is %d\n", sum);

    return 0;
}
