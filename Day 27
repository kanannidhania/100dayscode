Day 27 Question 1
#include <stdio.h>

int main() {
    int i, j;

    for (i = 1; i <= 5; i++) {
        for (j = 1; j <= (2*i - 1); j++) {
            printf("*");
        }
        printf("\n");
    }

    for (i = 4; i >= 1; i--) {
        for (j = 1; j <= (2*i - 1); j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}

Day 27 Question 2
#include <stdio.h>

int main() {
    int i, j, space;
    for (i = 1; i <= 4; i++) {
        
        for (space = 1; space <= 4 - i; space++)
            printf(" ");
     
        for (j = 1; j <= (2*i - 1); j++)
            printf("*");

        printf("\n");
    }

    for (i = 3; i >= 1; i--) {
        // spaces
        for (space = 1; space <= 4 - i; space++)
            printf(" ");
        // stars
        for (j = 1; j <= (2*i - 1); j++)
            printf("*");

        printf("\n");
    }

    return 0;
}

