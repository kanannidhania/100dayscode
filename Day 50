Day 50 Question 1
#include <stdio.h>

int main() {
    char date[20];
    fgets(date, sizeof(date), stdin);

    int day, month, year;
    sscanf(date, "%d/%d/%d", &day, &month, &year);

    char *months[] = {"Jan","Feb","Mar","Apr","May","Jun",
                      "Jul","Aug","Sep","Oct","Nov","Dec"};

    if (month >= 1 && month <= 12)
        printf("%02d-%s-%04d\n", day, months[month - 1], year);
    else
        printf("Invalid month\n");

    return 0;
}

Day 50 Question 2
#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    fgets(str, sizeof(str), stdin);

    int len = strlen(str);
    if (str[len-1] == '\n') str[len-1] = '\0';
    len = strlen(str);

    for (int i = 0; i < len; i++) {
        for (int j = 1; j <= len - i; j++) {
            for (int k = i; k < i + j; k++)
                printf("%c", str[k]);
            printf("\n");
        }
    }

    return 0;
}

