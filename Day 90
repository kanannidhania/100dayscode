#include <stdio.h>
#include <string.h>

enum Gender {
    MALE,
    FEMALE,
    OTHER
};

struct Person {
    char name[50];
    int age;
    enum Gender gender;
};

const char* getGenderString(enum Gender g) {
    switch (g) {
        case MALE:
            return "Male";
        case FEMALE:
            return "Female";
        case OTHER:
            return "Other";
        default:
            return "Unknown";
    }
}

int main() {
    struct Person person1;
    strcpy(person1.name, "Alex");
    person1.age = 35;
    person1.gender = FEMALE;

    printf("--- Person Information ---\n");
    printf("Name: %s\n", person1.name);
    printf("Age: %d\n", person1.age);
    printf("Gender: %s\n", getGenderString(person1.gender));
    printf("Gender (Integer Value): %d\n", person1.gender);

    printf("\n");

    struct Person person2 = {"Jordan", 28, OTHER};
    
    printf("--- Person Information ---\n");
    printf("Name: %s\n", person2.name);
    printf("Age: %d\n", person2.age);
    printf("Gender: %s\n", getGenderString(person2.gender));
    printf("Gender (Integer Value): %d\n", person2.gender);

    return 0;
}
