Day1Question1
#include <stdio.h>

int main() {
    float num1, num2, sum;

    
    printf("Enter the first number: ");
    scanf("%f", &num1);

    printf("Enter the second number: ");
    scanf("%f", &num2);

    
    sum = num1 + num2;

  
    printf("The sum of the two numbers is: %.2f\n", sum);

    return 0;
}



Day1Question2
#include <stdio.h>

int main() {
    float num1, num2;

    
    printf("Enter the first number: ");
    scanf("%f", &num1);

    printf("Enter the second number: ");
    scanf("%f", &num2);

    
    printf("\n--- Results ---\n");
    printf("Sum: %.2f\n", num1 + num2);
    printf("Difference: %.2f\n", num1 - num2);
    printf("Product: %.2f\n", num1 * num2);

    

