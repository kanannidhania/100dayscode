#include <stdio.h>
#include <float.h> 
struct Student {
    char name[50];
    int roll_no;
    float marks;
};

int main() {
    struct Student students[MAX_STUDENTS];
    int i;
    
    float max_marks = 0.0; 
    int top_student_index = -1;

    printf("--- Enter Data for %d Students ---\n", MAX_STUDENTS);

    for (i = 0; i < MAX_STUDENTS; i++) {
        printf("\nStudent %d:\n", i + 1);
        
        printf("  Enter name: ");
        scanf("%s", students[i].name);

        printf("  Enter roll number: ");
        scanf("%d", &students[i].roll_no);

        printf("  Enter marks: ");
        scanf("%f", &students[i].marks);
    }

    for (i = 0; i < MAX_STUDENTS; i++) {
        if (students[i].marks > max_marks) {
            max_marks = students[i].marks;
            top_student_index = i;
        }
    }

    printf("\n========================================\n");
    
    if (top_student_index != -1) {
        printf("ğŸ† Student with the Highest Marks Found! ğŸ†\n");
        printf("----------------------------------------\n");
        printf("Name: %s\n", students[top_student_index].name);
        printf("Roll Number: %d\n", students[top_student_index].roll_no);
        printf("Highest Marks: %.2f\n", students[top_student_index].marks);
    } else {
        printf("No student data was entered.\n");
    }

    printf("========================================\n");

    return 0;
}
